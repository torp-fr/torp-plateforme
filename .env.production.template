# Production Environment Variables for Vercel
# DO NOT COMMIT THIS FILE WITH REAL VALUES
# Configure these in Vercel Dashboard: Settings > Environment Variables

VITE_APP_NAME=TORP
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# API - Replace with your actual API URL
VITE_API_BASE_URL=https://api.torp.app/api
VITE_API_TIMEOUT=30000

# Mock API - Set to false in production once backend is ready
VITE_MOCK_API=true

# Debug - Should be false in production
VITE_DEBUG_MODE=false

# Authentication
# For mock mode (testing without backend):
VITE_AUTH_PROVIDER=mock
# For production with Supabase:
# VITE_AUTH_PROVIDER=supabase

# Supabase Configuration - REPLACE WITH YOUR REAL VALUES
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# VITE_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
# VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxx

# Features
VITE_FEATURE_PAYMENT_ENABLED=true
VITE_FEATURE_CHAT_AI_ENABLED=true
VITE_FEATURE_MARKETPLACE_ENABLED=true
VITE_FEATURE_ANALYTICS_ENABLED=true

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.doc,.docx

# Analytics - REPLACE WITH REAL VALUES
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Third-party
# VITE_STRIPE_PUBLIC_KEY=pk_live_xxxx
# VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key
