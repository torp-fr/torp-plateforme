# TORP Application - Environment Variables Template
# Copy this file to .env for local development

# Application
VITE_APP_NAME=TORP
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_PROVIDER=mock
# When using real auth, replace with: supabase, auth0, firebase, etc.
VITE_AUTH_SUPABASE_URL=
VITE_AUTH_SUPABASE_ANON_KEY=

# File Upload
VITE_MAX_FILE_SIZE=10485760
# Max file size in bytes (default: 10MB)
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.doc,.docx

# Features Flags
VITE_FEATURE_PAYMENT_ENABLED=true
VITE_FEATURE_CHAT_AI_ENABLED=true
VITE_FEATURE_MARKETPLACE_ENABLED=true
VITE_FEATURE_ANALYTICS_ENABLED=false

# Analytics & Monitoring
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Third-party Services
VITE_STRIPE_PUBLIC_KEY=
VITE_GOOGLE_MAPS_API_KEY=

# Development
VITE_DEBUG_MODE=true
VITE_MOCK_API=true
